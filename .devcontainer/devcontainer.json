{
  "name": "Cardano Mesh Course Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-22-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node": {
      "version": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "postCreateCommand": "npm install",
  "remoteUser": "node"
}
